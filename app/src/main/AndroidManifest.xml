<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="graciasalle.intermedio_proyecto" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SegundActivity"
            android:label="@string/title_activity_segund"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="graciasalle.intermedio_proyecto.MainActivity" />
        </activity>
        <activity
            android:name=".DataExchange"
            android:label="@string/title_activity_data_exchange"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".SegundActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="graciasalle.intermedio_proyecto.SegundActivity" />
        </activity>
    </application>

</manifest>
